{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": [
        "../../../Framework/src/*"
      ]
    },
    "noImplicitAny": true,
    "useUnknownInCatchVariables": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "../../../Core/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}